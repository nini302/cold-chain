        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="570dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="92dp"
        android:layout_height="42dp"
        android:ems="10"
